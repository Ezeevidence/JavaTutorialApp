<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v4.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Requirements"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:paddingTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applications Of Java"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:layout_gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="50dp">

            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Desktop GUI Applications:"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desktopguiapplications"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>

            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Web Aplications"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/webapplications"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>

            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Mobile Applications"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobileapplications"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>

            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. Embedded System Applications"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/embeddedsystem"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. Web Servers And Application Servers "
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/webservers"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>

            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6. Enterprise Applications:"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                />
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enterpriseapplications"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7. Scientific Applications "
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scientificapplications"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textAlignment="textStart"
                android:layout_gravity="start"/>


        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
</LinearLayout>