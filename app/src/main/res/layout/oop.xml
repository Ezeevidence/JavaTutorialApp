<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<android.support.v4.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black2"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Requirements"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:paddingBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Oriented Programming (O.O.P)"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Is OOP"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oop1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Principles Of OOP"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encapsulation"
        android:textSize="20sp"
        android:textColor="@color/blue2"
        android:textAlignment="center"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/encapsulation"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inheritance"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inheritance"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abstraction"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abstraction"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Polymorphism"
            android:textSize="20sp"
            android:textColor="@color/blue2"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/polymorphism"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overloading"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overriding"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />





    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>