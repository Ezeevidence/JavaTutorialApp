<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondPage"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:paddingTop="200dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <Button
        android:id="@+id/btnGettinStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/getting"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:color="@color/colorPrimaryDark"
        android:background="@drawable/textborder"
        android:textStyle="italic"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btnJavaSyntax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/java_syntx"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:color="@color/colorPrimaryDark"
        android:background="@drawable/textborder"
        android:textStyle="italic"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnProgramExamples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/examples"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:color="@color/colorPrimaryDark"
        android:background="@drawable/textborder"
        android:textStyle="italic"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnMoreTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tips"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:color="@color/colorPrimaryDark"
        android:background="@drawable/textborder"
        android:textStyle="italic"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
